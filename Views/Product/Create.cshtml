<style type="text/css">
    .card {
        width: 60%;
        margin-left: 20%;
        margin-top: 5%
    }
</style>

<div class="card">
    <div class="card-header">
        <h2>Add Product</h2>
    </div>
    <div class="card-body">
        
        <div class="row">
            <div class="col-lg-12">
               <div class="form-group">
                   <label>Code</label>
                   <input class="form-control" id="txtcode" />
               </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" id="txtname" />
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Quanity</label>
                    <input class="form-control" id="txtquanity" />
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>
                        Avaliablity
                    </label>
                    <input class="form-control" id="txtAvaliablity" />
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a onclick="SaveCustomer()" class="btn btn-primary">Save</a>
    </div>


</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">

    var js = jQuery.noConflict(true);
   

    function SaveCustomer() {
        var _token = localStorage.getItem('token');

        var isproceed=true;

        var _code=$('#txtcode');
        var _name = $('#txtname');
        var _quanity = $('#txtquanity');
        var _avaliablity = $('#txtAvaliablity');

        var code=_code.val();
        var name=_name.val();
        var quanity = _quanity.val();
        var avaliablity = _avaliablity.val();

        if(code==null || code==''){
            _code.css('border-color','red');
            isproceed=false;
        }else{
            _code.css('border-color', '#ccc');
        }
        if (name == null || name == '') {
            _name.css('border-color', 'red');
            isproceed = false;
        } else {
            _name.css('border-color', '#ccc');
        }
        if(isproceed){
            $.ajax({
                type: 'POST',
                url: '/Product/Save',
                // headers: {
                //     'Authorization': 'bearer ' + _token
                // },
                data: { ProductCode: code, ProductName: name, Quantity: quanity, Avaliablity: avaliablity },
                dataType: "json",
                async: false,
                success: function (data) {
                    if (data=="200"){
                        window.location.href='/Product/Index';
                        alert('Saved Successfully.')
                    }else{
                        alert('Failed to save')
                    }
                },
                failure: function (error) {

                }
            })

        }

        
    }
</script>